# Global
alias c="clear"
alias h="history"
alias e="$EDITOR"
alias reload="source ~/.bashrc; clear"
alias ea="e ~/bin/dotfiles/bash/aliases"
alias ee="e ~/bin/dotfiles/bash/env"
alias ..="cd .."
alias ~="cd ~/"
alias diff="$EDITOR -d"
alias ls="ls --color=always"

# RSpec
alias spec="spec --color --format specdoc"

# Git
alias gco="git co"
alias gcm="git ci -m"
alias gci="git ci"
alias ga="git add"
alias gs="git status"
alias gba="git b -a"
alias gf="git fetch"

# Enables autocompletion for git when using alias
complete -o default -o nospace -F _git_checkout gco
complete -o default -o nospace -F _git_commit gci
complete -o default -o nospace -F _git_fetch gf

# Rails
alias ss="script/server"
alias sc="script/console"
alias at="autotest"
